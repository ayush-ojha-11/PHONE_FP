<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CallActivity">


    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/inProgressRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:id="@+id/caller_iv" />

        <TextView
            android:id="@+id/caller_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_bold"
            android:text="Ayush Ojha"
            android:layout_below="@id/caller_iv"/>

        <TextView
            android:id="@+id/call_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="#4CAF50"
            android:fontFamily="@font/poppins_light"
            android:layout_marginStart="10dp"
            android:layout_below="@id/caller_name_tv"
            android:textSize="18sp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/call_status_tv"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/caller_iv"
            android:textColor="@color/white"
            android:text="Connecting..."
            android:fontFamily="@font/poppins_regular"
            android:textSize="18sp"
            android:layout_margin="10dp"/>


        <EditText
            android:layout_below="@id/call_time_tv"
            android:id="@+id/note_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/linear_layout_1"
            android:textColorHint="#B2FFFFFF"
            android:layout_margin="10dp"
            android:gravity="top"
            android:fontFamily="@font/poppins_medium"
            android:hint="Anything to note..." />

        <LinearLayout
            android:id="@+id/linear_layout_1"
            android:background="@drawable/round_button"
            android:layout_marginBottom="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_above="@id/linear_layout_2"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/keypad_btn"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:drawableTop="@drawable/ic_dialpad"
                android:text="KeyPad"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/hold_btn"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/poppins_light"
                android:drawableTop="@drawable/ic_hold"
                android:text="Hold"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/add_call_btn"
                style="@style/Widget.Material3.Button.TextButton"
                android:fontFamily="@font/poppins_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_call_add"
                android:text="Add"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/speaker_btn"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:drawableTop="@drawable/ic_speaker"
                android:fontFamily="@font/poppins_light"
                android:text="Speaker"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/end_call_btn"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/white"
                android:drawableTop="@drawable/ic_end_call"
                android:fontFamily="@font/poppins_regular"
                android:text="End Call"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/mute_btn"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_mute"
                android:text="Mute"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_light"
                android:textSize="14sp" />

        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/incoming_call_RL"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:scaleType="centerCrop"
            android:id="@+id/incomingCallerPhoto_iv"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/incomingCallerName_tv"
            android:textColor="@color/white"
            android:layout_below="@id/incomingCallerPhoto_iv"
            android:text="Ayush Ojha"
            android:fontFamily="@font/poppins_medium"
            android:textSize="24sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/incomingCallerNumber_tv"
            android:layout_below="@id/incomingCallerName_tv"
            android:text="9569489341"
            android:layout_margin="2dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_light"
            android:layout_centerHorizontal="true"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ringingStatus_tv"
            android:layout_margin="5dp"
            android:text="Ringing..."
            android:textColor="@color/green"
            android:layout_below="@id/incomingCallerNumber_tv"
            android:fontFamily="@font/poppins_light"
            android:layout_centerHorizontal="true"/>



        <RelativeLayout
            android:layout_marginBottom="25dp"
            android:padding="50dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/rejectIncomingCall_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_end_call"
                android:layout_alignParentStart="true"
                app:tint="@android:color/white"
                android:contentDescription="Reject Call"
                android:backgroundTint="@color/red"
                android:layout_marginStart="20dp"
                tools:ignore="HardcodedText" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/acceptIncomingCall_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_call"
                app:tint="@android:color/white"
                android:contentDescription="Accept Call"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/green"
                android:layout_marginEnd="20dp"
                tools:ignore="HardcodedText" />
        </RelativeLayout>




    </RelativeLayout>



</RelativeLayout>